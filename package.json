{
  "name": "pixel-compressor",
  "version": "0.9.9",
  "description": "An app that compresses and resizes images.",
  "main": "dist/main/index.js",
  "scripts": {
    "start": "npm run clean && rsbuild build && electron dist/main/index.js",
    "build": "npm run clean ./build && rsbuild build && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder -p never",
    "rebuild": "electron-rebuild -f -w @napi-rs/canvas",
    "clean": "del-cli ./dist"
  },
  "overrides": {
    "graceful-fs": "^4.2.11"
  },
  "keywords": [
    "image",
    "compressor",
    "resizer",
    "renamer",
    "anime"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Moebytes/Pixel-Compressor"
  },
  "build": {
    "appId": "com.moebytes.pixel-compressor",
    "productName": "Pixel Compressor",
    "icon": "./assets/icon.png",
    "directories": {
      "buildResources": "assets",
      "output": "build"
    },
    "buildDependenciesFromSource": true,
    "mac": {
      "target": {
        "target": "dmg",
        "arch": "arm64"
      },
      "category": "public.app-category.utilities",
      "extraResources": [
        {
          "from": "vendor/mac/cjpeg",
          "to": "app/vendor/cjpeg"
        },
        {
          "from": "vendor/mac/cwebp",
          "to": "app/vendor/cwebp"
        },
        {
          "from": "vendor/mac/gifsicle",
          "to": "app/vendor/gifsicle"
        },
        {
          "from": "vendor/mac/pngquant",
          "to": "app/vendor/pngquant"
        }
      ]
    },
    "dmg": {
      "title": "${productName}",
      "background": "./assets/background.png",
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "win": {
      "target": {
        "target": "nsis",
        "arch": "x64"
      },
      "extraResources": [
        {
          "from": "vendor/windows/cjpeg.exe",
          "to": "app/vendor/cjpeg.exe"
        },
        {
          "from": "vendor/windows/cwebp.exe",
          "to": "app/vendor/cwebp.exe"
        },
        {
          "from": "vendor/windows/gifsicle.exe",
          "to": "app/vendor/gifsicle.exe"
        },
        {
          "from": "vendor/windows/pngquant.exe",
          "to": "app/vendor/pngquant.exe"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "uninstallDisplayName": "Pixel Compressor",
      "createDesktopShortcut": "always",
      "installerSidebar": "./assets/installer.bmp",
      "uninstallerSidebar": "./assets/installer.bmp"
    },
    "linux": {
      "target": {
        "target": "appImage",
        "arch": "x64"
      },
      "category": "Utility",
      "icon": "./assets/icon.png",
      "extraResources": [
        {
          "from": "vendor/linux/cjpeg",
          "to": "app/vendor/cjpeg"
        },
        {
          "from": "vendor/linux/cwebp",
          "to": "app/vendor/cwebp"
        },
        {
          "from": "vendor/linux/gifsicle",
          "to": "app/vendor/gifsicle"
        },
        {
          "from": "vendor/linux/pngquant",
          "to": "app/vendor/pngquant"
        }
      ]
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "asar": true,
    "asarUnpack": [
      "node_modules/**/*.node"
    ],
    "publish": {
      "provider": "github",
      "repo": "Pixel-Compressor",
      "owner": "Moebytes",
      "releaseType": "draft"
    }
  },
  "author": "Moebytes",
  "license": "CC BY-NC 4.0",
  "devDependencies": {
    "@electron-rsbuild/plugin-main": "^0.0.12",
    "@electron-rsbuild/plugin-preload": "^0.0.12",
    "@electron-rsbuild/plugin-renderer": "^0.0.12",
    "@electron/rebuild": "^4.0.3",
    "@rsbuild/core": "^1.7.3",
    "@rsbuild/plugin-less": "^1.6.0",
    "@rsbuild/plugin-node-polyfill": "^1.4.4",
    "@rsbuild/plugin-react": "^1.4.5",
    "@rsbuild/plugin-type-check": "^1.3.3",
    "@svgr/webpack": "^8.1.0",
    "@types/gif-encoder": "^0.7.4",
    "@types/imagemin": "^9.0.1",
    "@types/imagemin-gifsicle": "^7.0.4",
    "@types/imagemin-mozjpeg": "^8.0.4",
    "@types/imagemin-optipng": "^5.2.4",
    "@types/imagemin-webp": "^7.0.3",
    "@types/pdf-image": "^2.0.4",
    "@types/pdfkit": "^0.17.5",
    "@types/react": "^18.3.28",
    "@types/react-dom": "^18.3.7",
    "@types/sharp": "^0.32.0",
    "cross-env": "^10.1.0",
    "del-cli": "^7.0.0",
    "electron": "^40.6.0",
    "electron-builder": "^26.8.1",
    "node-addon-api": "^8.5.0",
    "node-gyp": "^12.2.0",
    "transform-loader": "^0.2.4",
    "typescript": "^5.9.3",
    "wasm-loader": "^1.3.0",
    "worker-loader": "^3.0.8"
  },
  "dependencies": {
    "@napi-rs/canvas": "^0.1.93",
    "@react-pdf/pdfkit": "^4.1.0",
    "@reduxjs/toolkit": "^2.11.2",
    "ass-to-srt": "^1.2.1",
    "ass-to-vtt": "^1.2.0",
    "bing-translate-api": "^4.2.0",
    "bootstrap": "^5.3.8",
    "browser-id3-writer": "^6.3.1",
    "electron-click-drag-plugin": "^2.0.2",
    "electron-store": "^8.0.0",
    "gif-encoder": "^0.7.2",
    "gif-frames": "github:Moestash/gif-frames#no-cumulative",
    "image-pixels": "^2.2.2",
    "image-size": "^2.0.2",
    "imagemin": "github:Moestash/imagemin#fix2",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^10.0.0",
    "imagemin-webp": "^8.0.0",
    "images-meta": "github:Moestash/images-meta",
    "mkv-subtitle-extractor": "^1.1.1",
    "pdfjs-dist": "github:Moestash/pdfjs-dist",
    "rc-slider": "^11.1.9",
    "react": "^18.3.1",
    "react-bootstrap": "^2.10.10",
    "react-compare-slider": "^3.1.0",
    "react-dom": "^18.3.1",
    "react-dropzone": "^15.0.0",
    "react-redux": "^9.2.0",
    "react-reorder": "^3.0.0-alpha.7",
    "react-zoom-pan-pinch": "^3.7.0",
    "sagiri": "^4.3.0",
    "shade-blend-color": "^1.0.0",
    "sharp": "^0.34.5",
    "sharp-phash": "^2.2.0",
    "spawn-sync": "^2.0.0",
    "srt-to-vtt": "^1.1.3"
  }
}
